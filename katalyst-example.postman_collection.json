{
  "info": {
    "_postman_id": "b6f7ad2c-7f8a-4f50-8f69-0bf1e0d5c6b4",
    "name": "katalyst-example",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "jwt", "value": "" },
    { "key": "userId", "value": "1" }
  ],
  "item": [
    {
      "name": "Health - simple",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Health - detailed",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health/detailed"
      }
    },
    {
      "name": "Auth - register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123\",\n  \"displayName\": \"Sample User\"\n}"
        }
      }
    },
    {
      "name": "Auth - login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{baseUrl}}/api/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123\"\n}"
        }
      }
    },
    {
      "name": "Users - list",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
        "url": "{{baseUrl}}/api/users"
      }
    },
    {
      "name": "Users - get by id",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/users/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "{{userId}}"]
        }
      }
    },
    {
      "name": "Users - me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }],
        "url": "{{baseUrl}}/api/users/me"
      }
    }
  ]
}
